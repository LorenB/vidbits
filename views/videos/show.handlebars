{{#with video as |video|}}
<div class='single-video-container'>
  <div class="video-title">
    <h1 class='single-video-title'>Title: {{video.title}}</h1>
  </div>
    <iframe class="video-player" src="{{video.url}}" frameborder="0" allowfullscreen></iframe>
  <div class="video-description">
    <p class='single-video-description'>Description: {{video.description}}</p>
  </div>
  <div class="video-url">
    <p class='single-video-url'>Url: {{video.url}}</p>
  </div>
</div>
<form>
    <input id="edit" type="submit" value="Edit" formmethod="GET" formaction="/videos/{{video._id}}/edit"/>
    <input id="delete" type="submit" value="Delete" formmethod="POST" formaction="/videos/{{video._id}}/deletions"/>
</form>
{{/with}}
